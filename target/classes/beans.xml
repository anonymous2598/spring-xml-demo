<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor1" class="com.stackroute.domain.Actor" scope="singleton">
        <constructor-arg name="name" value="sandeep"/>
        <constructor-arg name="gender" value="male"/>
        <constructor-arg name="age" value="21"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor" scope="singleton">
        <constructor-arg type="java.lang.String" value="sandeep"/>
        <constructor-arg type="java.lang.String" value="male"/>
        <constructor-arg type="int" value="21" />
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor" scope="singleton">
        <constructor-arg index="0" value="sandeep"></constructor-arg>
        <constructor-arg index="1" value="male"></constructor-arg>
        <constructor-arg index="2" value="21"></constructor-arg>
    </bean>



    <bean name="MovieA,MovieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor1"/>
    </bean>

</beans>